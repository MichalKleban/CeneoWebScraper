{% extends "base.html.jinja" %}
{% block content %}
    <h2>Pobierz opinie o produkcie</h2>
    <form action="{{url_for('extract')}}" method="POST">
        <div class="row g-3 align-items-center">
    <div class="col-auto">
        <label for="product_id" class="col-form-label">Kod produktu</label>
    </div>
    <div class="col-auto">
        <input type="text" id="product_id" class="form-control" aria-describedby="passwordHelpInline">
    </div>
    <div class="col-auto">
        <input type="submit" class="btn btn-primary" value="Pobierz">
    </div>
    </form>
</div>
{% endblock content %}